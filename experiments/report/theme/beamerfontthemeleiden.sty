\ProvidesPackage{beamerfontthemeleiden}

% Set default Roman font to Latin Modern
\def\beamer@leiden@rmfont{lmr}
\DeclareOptionBeamer{rmfont}{\def\beamer@leiden@rmfont{#1}}
% Set default Serif font to Latin Modern Serif
\def\beamer@leiden@sffont{lmss}
\DeclareOptionBeamer{sffont}{\def\beamer@leiden@sffont{#1}}
% Set default Teletype font to Latin Modern Teletype
\def\beamer@leiden@ttfont{lmtt}
\DeclareOptionBeamer{ttfont}{\def\beamer@leiden@ttfont{#1}}
\ProcessOptionsBeamer


% From RELSIZE.STY ver 2.0 Mar 15, 1995 by Donald Arseneau:
% To refresh your memory, the font sizing commands in LaTeX are, in order:
% \tiny, \scriptsize, \footnotesize, \small, \normalsize, \large, \Large,
% \LARGE, \huge, \Huge.
% fontseries: l=light, m=normal, b=bold, eb = black


% Set fonts to the selected defaults
\renewcommand{\rmdefault}{\beamer@leiden@rmfont}
\renewcommand{\sfdefault}{\beamer@leiden@sffont}
\renewcommand{\ttdefault}{\beamer@leiden@ttfont}

% Set default font to roman font.
\renewcommand{\familydefault}{\rmdefault}

% Set Math fonts to Latin Modern
\SetSymbolFont{operators}   {normal}{OT1}{lmr} {m}{n}
\SetSymbolFont{letters}     {normal}{OML}{lmm} {m}{it}
\SetSymbolFont{symbols}     {normal}{OMS}{lmsy}{m}{n}
\SetSymbolFont{largesymbols}{normal}{OMX}{lmex}{m}{n}
\SetSymbolFont{operators}   {bold}  {OT1}{lmr} {bx}{n}
\SetSymbolFont{letters}     {bold}  {OML}{lmm} {b}{it}
\SetSymbolFont{symbols}     {bold}  {OMS}{lmsy}{b}{n}
\SetSymbolFont{largesymbols}{bold}  {OMX}{lmex}{m}{n}
\SetMathAlphabet{\mathbf}{normal}{OT1}{lmr}{bx}{n}
\SetMathAlphabet{\mathsf}{normal}{OT1}{lmss}{m}{n}
\SetMathAlphabet{\mathit}{normal}{OT1}{lmr}{m}{it}
\SetMathAlphabet{\mathtt}{normal}{OT1}{lmtt}{m}{n}
\SetMathAlphabet{\mathbf}{bold}  {OT1}{lmr}{bx}{n}
